
<form id="login-form" novalidate>
    <!-- <div class="login-container" id="login"> -->
    <div class="top">
        <!-- <span>Don't have an account? <a href="#" onclick="register()">Sign Up</a></span> -->
        <header>Iniciar Sesión</header>
    </div>
    <div class="input-box">
        <input name="username" type="text" class="input-field" id="login-username"
            placeholder="Correo Electrónico" autofocus required>
        <i class="bx bx-user"></i>
    </div>
    <div class="input-box">
        <input name="password" type="password" class="input-field" id="login-password"
            placeholder="Contraseña" required>
        <i class="bx bx-lock-alt"></i>
    </div>
    <div class="input-box">
        <input type="submit" class="submit" value="Iniciar">
    </div>
    <div class="two-col">
        <div class="one">
            <input type="checkbox" name="recordar" id="recordar">
            <label for="recordar">Recordar Usuario</label>
        </div>
        <div class="two">
            <label><a href="#">¿Olvide mi contrseña?</a></label>
        </div>
    </div>
    <!-- </div> -->
</form>