<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

</head>

<body>
    <div class="login-container" id="register">
        <form id="login-form">
            <!-- <div class="login-container" id="login"> -->
            <div class="top">
                <!-- <span>Don't have an account? <a href="#" onclick="register()">Sign Up</a></span> -->
                <header>Iniciar Sesión</header>
            </div>
            <div class="input-box">
                <input name="username" type="text" class="input-field" id="login-username"
                    placeholder="Correo Electrónico" autofocus required>
                <i class="bx bx-user"></i>
            </div>
            <div class="input-box">
                <input name="password" type="password" class="input-field" id="login-password" placeholder="Contraseña"
                    required>
                <i class="bx bx-lock-alt"></i>
            </div>
            <div class="input-box">
                <input type="submit" class="submit" value="Iniciar">
            </div>
            <div class="two-col">
                <div class="one">
                    <input type="checkbox" name="recordar" id="recordar">
                    <label for="recordar">Recordar Usuario</label>
                </div>
                <div class="two">
                    <label><a href="#">Olvide mi contrseña?</a></label>
                </div>
            </div>
            <!-- </div> -->
        </form>
    </div>

    <div class="register-container" id="register">
        <form id="register-form">
            <div class="top">
                <header>Registrar</header>
            </div>
            <div class="two-forms">
                <div class="input-box">
                    <input type="text" class="input-field" id="register-nombre" name="nombre" placeholder="Nombre(s)">
                    <i class="bx bx-user"></i>
                </div>
                <div class="input-box">
                    <input type="text" class="input-field" id="register-apellido" name="apellido"
                        placeholder="Apellido(s)">
                    <i class="bx bx-user"></i>
                </div>
            </div>
            <div class="input-box">
                <div class="input-box">
                    <input type="text" class="input-field" id="register-username" name="username" placeholder="Correo"
                        required>
                    <i class="bx bx-envelope"></i>
                </div>
                <div class="input-box">
                    <input type="password" id="register-password" name="password" class="input-field"
                        placeholder="Contraseña" required>
                    <i class="bx bx-lock-alt"></i>
                </div>
                <div class="input-box">
                    <input type="password" id="register-confirm-password" name="Confirm-password" class="input-field"
                        placeholder="Repetir Contraseña" required>
                    <i class="bx bx-lock-alt"></i>
                </div>
                <div class="input-box">
                    <input type="submit" class="submit" value="Registrar">
                </div>
                <div class="two-col">
                    <div class="one">
                        <!-- <input type="checkbox" id="register-check"> -->
                        <!-- <label for="register-check"> Remember Me</label> -->
                    </div>
                    <div class="two">
                        <!-- <label><a href="#">Terms & conditions</a></label> -->
                    </div>
                </div>
        </form>
    </div>
</body>

</html>